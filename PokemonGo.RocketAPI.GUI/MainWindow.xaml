        mc:Ignorable="d"
        Title="PokemonGo RocketAPI Bot" Height="350" Width="525">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="432,289,0,0" VerticalAlignment="Top" Width="75" Click="startButton_Click"/>
